                    </StackLayout>
                </ScrollView>
            </ContentPage.Content>
        </ContentPage>
        
    </MasterDetailPage.Master>

    <!--CONTEUDOS REDIRECIONADOS-->
    <MasterDetailPage.Detail>

        <NavigationPage>
            <x:Arguments>
                <local1:HomeTabbedPage/>
            </x:Arguments>
        </NavigationPage>

